{
  "compileOnSave": false,
  "compilerOptions": {
    "allowJs": false,
    "target": "es2020",
    "noImplicitAny": true,
    "strictNullChecks": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "jsx": "react",
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "outDir": "lib",
    "incremental": true,
    "lib": ["es2016", "es2017", "es2019"],
    "module": "commonjs",
    "sourceMap": true,
    "types": [],
    "skipLibCheck": true,
    "declaration": true
  },
  "include": ["src/**/*.ts"]
}
